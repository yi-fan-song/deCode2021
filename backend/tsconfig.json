{
  "compilerOptions": {
    "lib": ["ES6"],
    "module": "commonjs",
    "target": "ES6",
    "strictFunctionTypes": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build"
  },
  "include": ["*.ts"],
  "exclude": ["**/node_modules/*"]
}
